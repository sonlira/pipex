NAME = pipex
CC = cc
CFLAGS = -Wall -Wextra -Werror
SRCS = srcs/main.c srcs/pipex.c srcs/utils.c
OBJS = $(SRCS:.c=.o)
INCLUDES = -I includes

all: $(NAME)

$(NAME): $(OBJS)
	$(CC) $(CFLAGS) $(OBJS) -o $(NAME)

%.o: %.c
	$(CC) $(CFLAGS) $(INCLUDES) -c $< -o $@

clean:
	rm -f $(OBJS)

fclean: clean
	rm -f $(NAME)

re: fclean all

.PHONY: all clean fclean re